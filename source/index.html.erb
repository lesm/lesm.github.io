        <h2><%= link_to article.title, article %></h2>
        <h5><%= article.date.strftime('%b %e') %></h5>
        <%= article.summary(200) %>
        <div class='right'>
          <%= link_to 'Leer m치s...', article , class: 'bottom-read-more'%>
