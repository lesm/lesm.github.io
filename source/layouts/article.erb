<% wrap_layout :layout do %>
  <article class="d-flex justify-content-center pt-4">
    <div class="col-md-8" role="main">
      <h1>
        <%= current_article.title %><br>
        <h5><time><%= current_article.date.strftime("%b %e %Y") %></time><h5>
